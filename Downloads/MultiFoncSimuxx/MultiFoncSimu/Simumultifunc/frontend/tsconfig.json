{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext", "DOM", "DOM.Iterable","es2017"],
    "module": "ESNext",

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client", "node"]
  },
  "include": ["src", "env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
