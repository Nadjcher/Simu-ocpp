          "parameters": {},
          "expectedResponse": {
            "parked": true
          }
        },
        {
          "action": "plug",
          "delay": 3000,
          "sessionId": "session-1",
          "parameters": {},
          "expectedResponse": {
            "plugged": true
          }
        },
        {
          "action": "authorize",
          "delay": 5000,
          "sessionId": "session-1",
          "parameters": {
            "idTag": "TEST-BADGE-001"
          },
          "expectedResponse": {
            "idTagInfo": {
              "status": "Accepted"
            }
          }
        },
        {
          "action": "startTransaction",
          "delay": 7000,
          "sessionId": "session-1",
          "parameters": {
            "connectorId": 1,
            "idTag": "TEST-BADGE-001",
            "meterStart": 0
          },
          "expectedResponse": {
            "idTagInfo": {
              "status": "Accepted"
            },
            "transactionId": "*"
          }
        },
        {
          "action": "wait",
          "delay": 30000,
          "sessionId": "session-1",
          "parameters": {
            "targetSoc": 80
          },
          "expectedResponse": {}
        },
        {
          "action": "stopTransaction",
          "delay": 1000,
          "sessionId": "session-1",
          "parameters": {
            "reason": "Local"
          },
          "expectedResponse": {
            "idTagInfo": {
              "status": "Accepted"
            }
          }
        }
      ]
    },
